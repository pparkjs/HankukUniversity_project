<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="kr.or.hku.mapper.common.LoginMapper">
 	<select id="loginUser" parameterType="usersVO" resultType="usersVO">
 		select * from users
 		where user_no = #{userNo} and user_pw = #{userPw} and user_cls_cd = #{userClsCd}
 	</select>
 
 	<select id="studentUser" parameterType="String" resultType="studentVO">
 		select * from student
 		where std_no = #{stdNo}
 	</select>
 	
 	<select id="professorUser" parameterType="String" resultType="professorVO">
 		select * from professor
 		where pro_no = #{proNo}
 	</select>
 	
 	 <select id="employeeUser" parameterType="String" resultType="employeeVO">
 		select * from employee
 		where emp_no = #{empNo}
 	</select>
 	
 </mapper>